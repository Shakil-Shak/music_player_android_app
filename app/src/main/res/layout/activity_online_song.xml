<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F4F1D8"
    tools:context=".OnlineSong">

    <include layout="@layout/toolbar2"/>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/myListView"
        android:layout_below="@+id/toolbar2"
        android:choiceMode="singleChoice"
        android:padding="10dp"
        />
    <com.example.jean.jcplayer.view.JcPlayerView
        android:id="@+id/jcplayer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        app:next_icon="@drawable/forward"
        app:previous_icon="@drawable/replay"
        app:random_icon="@drawable/shuffle_jplay"
        app:repeat_icon="@drawable/repeat_once"
        app:play_icon="@drawable/play_jplay"
        app:pause_icon="@drawable/pause_jplay"
        android:background="@drawable/play_side_bg"
        android:layout_marginBottom="20dp"
        />

